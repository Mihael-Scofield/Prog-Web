<h1>Autors</h1>
<%= link_to 'Novo Autor', new_autor_path, class: 'button button-primary' if admin? %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th class="actions">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @autors.each do |autor| %>
      <tr>
        <td><%= link_to autor.nome, autor %></td>
        <td class="actions">
          <%= link_to 'Editar', edit_autor_path(autor), class: 'button button-secondary' if admin? %>
          <%= link_to 'Excluir', autor, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'button button-primary' if admin? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

